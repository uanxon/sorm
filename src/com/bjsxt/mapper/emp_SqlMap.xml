<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bjsxt.dao.EmpDAO">
	<resultMap id="baseResult" type="com.bjsxt.po.Emp">
		<result column="empname" property="empname" jdbcType="INTEGER" />
		<result column="birthday" property="birthday" jdbcType="INTEGER" />
		<result column="deptName" property="deptName" jdbcType="INTEGER" />
		<result column="bonus" property="bonus" jdbcType="INTEGER" />
		<result column="deptId" property="deptId" jdbcType="INTEGER" />
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="salary" property="salary" jdbcType="INTEGER" />
		<result column="deptAddr" property="deptAddr" jdbcType="INTEGER" />
		<result column="age" property="age" jdbcType="INTEGER" />
	</resultMap>
 <select id="selectByPrimaryKey" resultMap="baseResult" parameterType="com.bjsxt.po.Emp">
	 select empname,birthday,deptName,bonus,deptId,id,salary,deptAddr,age
	 from emp
		where id  = #{id:INT}
 </select>
 <insert id="insertEmp" useGeneratedKeys="true" keyProperty="${1}" parameterType="com.bjsxt.po.Emp">
	 insert into emp (empname,birthday,deptName,bonus,deptId,id,salary,deptAddr,age)
	 values ( #{empname:VARCHAR},#{birthday:DATETIME},#{deptName:VARCHAR},#{bonus:DOUBLE},#{deptId:INT},#{id:INT},#{salary:DOUBLE},#{deptAddr:VARCHAR},#{age:INT})
 </insert>
 <update id="updateByPrimaryKey" parameterType="com.bjsxt.po.Emp" >
	 update emp
	 <set>
		<if test=" empname != null"> empname  = #{empname:VARCHAR},</if>
		<if test=" birthday != null"> birthday  = #{birthday:DATETIME},</if>
		<if test=" deptName != null"> deptName  = #{deptName:VARCHAR},</if>
		<if test=" bonus != null"> bonus  = #{bonus:DOUBLE},</if>
		<if test=" deptId != null"> deptId  = #{deptId:INT},</if>
		<if test=" id != null"> id  = #{id:INT},</if>
		<if test=" salary != null"> salary  = #{salary:DOUBLE},</if>
		<if test=" deptAddr != null"> deptAddr  = #{deptAddr:VARCHAR},</if>
		<if test=" age != null"> age  = #{age:INT},</if>
	 </set>
		where id  = #{id:INT}
 </update>
</mapper>